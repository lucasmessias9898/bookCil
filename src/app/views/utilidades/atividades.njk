{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">
    <a href="/utilidades/create">Novo</a>
    <table width="100%">
      <thead>
        <tr>
          <th>Atividade</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for activity in activities %}
          <tr>
            <td>
              {{activity.equipamento}} - {{activity.tag}} - {{activity.description}}
            </td>
            <td><a href="/utilidades/{{activity.id}}">ver</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock content %}