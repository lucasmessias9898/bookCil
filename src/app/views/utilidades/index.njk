{% extends "layout.njk" %}

{% block content %}
  {% for activity in activities%}
    <div id="card" class="card">
      <section class="details">
        
        <h3>
          {%for machine in machines %}
            {% if activity.machine_id == machine.id %} 
              {{machine.name}}
          - {{machine.tag}} - {{activity.description}}
        </h3>

          <div class="item">
            <div>Periodicidade</div>
            <div>{{activity.periodicidade}} H</div>
          </div>

          <div class="item">
            <div>Horimetro Atual</div>
            <div id="#horimetroAtual">{{machine.horimetro}}</div>
          </div>

          <div class="item">
            <div>Pr√≥xima Atividade</div>
            <div>{{activity.horimetro_proxima}}</div>
          </div>

          <div class="item">
            <div>Acompanhamento</div>
            <div>
              {%if activity.horimetro_proxima - (machine.horimetro ) < 0 %}
                <span class="vencido">{{activity.horimetro_proxima - (machine.horimetro )}} h</span>
              {%else%}
                <span>{{activity.horimetro_proxima - (machine.horimetro )}} h</span>
              {%endif%}
            </div>
          </div>
        {%endif%}   
      {% endfor %} 
        
        <div class="item-button">
          <div>
            {% for file in files %}
              <button type="submit">
                <a href="{{file.src}}" target='_blank'>Procedimento</a>
              </button>
            {% endfor %}
          </div>
          <div>
            <button type="submit">
              <a href="/execucoes/{{ activity.id }}/create" >Atividade Realizada</a>
            </button>
          </div>
        </div>

      </section>
    </div>
  {% endfor %}

  <script>
    setTimeout(function(){ location.reload(); }, 180000);
  </script>

{% endblock content %}