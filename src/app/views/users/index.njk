{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">
    <a href="/users/create">Novo</a>
    <table width="100%">
      <thead>
        <tr>
          <th>Usuário</th>
          <th>Área</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for user in users %}
          <tr>
            <td>
              {{user.name}}
            </td>
            <td>
              {% for area in  areas %}
                {% if user.area_id == area.id %}{{area.name}}{%endif%}
              {% endfor %}
             </td>
            <td><a href="/users/{{user.id}}">ver</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock content %}