{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">
    <a href="/maquinas/create">Novo</a>
    <table width="100%">
      <thead>
        <tr>
          <th>Id</th>
          <th>Máquina</th>
          <th>Tag</th>
          <th>Área</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for machine in machines %}
          <tr>
            <td>
              {{machine.id}}
            </td>
            <td>
              {{machine.name}}
            </td>
            <td>
              {{machine.tag}}
            </td>
            <td>
              {% for area in  areas %}
                {% if machine.area_id == area.id %}{{area.name}}{%endif%}
              {% endfor %}
             </td>
            <td><a href="/maquinas/{{machine.id}}">ver</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock content %}